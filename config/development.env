NODE_ENV=development
PORT=5000
LOG_LEVEL=debug
CORS_ORIGIN=*

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/blueearth

# Redis (optional for development)
# REDIS_URL=redis://localhost:6379

# Security
SESSION_SECRET=local_development_secret_key
JWT_SECRET=local_development_jwt_secret
BCRYPT_SALT_ROUNDS=10

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MS=3600000
AUTH_RATE_LIMIT_MAX=10
RESET_RATE_LIMIT_WINDOW_MS=3600000
RESET_RATE_LIMIT_MAX=3

# SendGrid (for emails)
# SENDGRID_API_KEY=your_sendgrid_key_here
SENDGRID_FROM_EMAIL=noreply@blueearthcapital.com

# Bubble.io API (for employee sync)
# BUBBLE_API_KEY=your_bubble_api_key_here
BUBBLE_API_URL=https://api.bubble.io/v1/

# Document Storage
DOCUMENT_STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./uploads