NODE_ENV=staging
PORT=5000
LOG_LEVEL=debug
CORS_ORIGIN=https://staging.portal.blueearthcapital.com

# Database
# DATABASE_URL is injected by environment

# Redis 
# REDIS_URL is injected by environment

# Security
# SESSION_SECRET is injected by environment
# JWT_SECRET is injected by environment
BCRYPT_SALT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MS=3600000
AUTH_RATE_LIMIT_MAX=10
RESET_RATE_LIMIT_WINDOW_MS=3600000
RESET_RATE_LIMIT_MAX=3

# SendGrid (for emails)
# SENDGRID_API_KEY is injected by environment
SENDGRID_FROM_EMAIL=staging-noreply@blueearthcapital.com

# Bubble.io API (for employee sync)
# BUBBLE_API_KEY is injected by environment
BUBBLE_API_URL=https://api.bubble.io/v1/

# Document Storage
DOCUMENT_STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID is injected by environment
# AWS_SECRET_ACCESS_KEY is injected by environment
# AWS_REGION is injected by environment
# S3_BUCKET_NAME is injected by environment